# Default model to use for LLM generation
DEFAULT_MODEL=openai:gpt-4.5

# API key for OpenAI (required if using OpenAI models)
OPENAI_API_KEY=your-openai-key-here

# API key for Anthropic (optional unless using Anthropic models)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Directory containing markdown recipe files
RECIPES_DIR=./recipes

# Base output directory for any generated files
OUTPUT_ROOT=./outputs

# Directory for logs
LOGS_DIR=./logs
